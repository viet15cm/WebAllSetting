<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">

                <a class="navbar-brand font-monospace fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    @*<img src="https://getbootstrap.com/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="40" height="34">*@
                    <i class="fa-solid fa-dice-d20"></i> Việt IT
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_PartialMenuTop" />
                </div>
            </div>
        </nav>
        <div class="d-sm-none collapse bg-white" id="navbarToggleExternalContent">
            <div class="container border-bottom pt-2 pb-2">
                <ul class="navbar-nav mx-3">
                    <li class="nav-item "><a  asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-black "><i class="fa-solid fa-house-user"></i> Trang chủ</a></li>
                    <li class="nav-item "><a asp-area="ProductManager" asp-controller="Commodity" asp-action="index" class="nav-link text-black"><i class="fa-brands fa-codepen"></i> Quản lý</a></li>
                    @*<li class="nav-item dropdown">
                            <a href="" class="nav-link dropdown-toggle" data-toggle="collapse"
                               data-target="#navList" aria-controls="navList" aria-expanded="false">List</a>
                            <div class="collapse" id="navList">
                                <div class="container">
                                    <ul class="navbar-nav">
                                        <li class="nav-item"><a href="" class="nav-link">Home</a></li>
                                        <li class="nav-item"><a href="" class="nav-link">Index</a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>*@
                </ul>
            </div>
        </div>
    </header>
    <div class="container p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <i class="fa-solid fa-dice-d20"></i> 2022 - Việt IT - <a asp-area="" asp-action="index" asp-controller="Home">Trang Chủ</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
